<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//dao.impl.jdbc.mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.CartDao">

    <!--商品添加到购物车-->
    <insert id="addCart" parameterType="entity.Cart" statementType="PREPARED" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        insert into cart(productid,productnum) values (#{product.id},#{productnum})
    </insert>
    <resultMap id="cart_product_resultmap" type="entity.Cart" autoMapping="true">

        <id property="id" column="id"></id>
        <!--<result property="productnum" column="productnum"></result>-->
        <!--select * from product where id = ? -->
        <association property="product" javaType="entity.Product" column="productid" autoMapping="true">
            <id property="id" column="productid"></id>
            <result property="name" column="name"></result>
            <!--<result property="detail" column="detail"></result>
            <result property="price" column="price"></result>
            <result property="image" column="image"></result>
            <result property="stock" column="stock"></result>-->
        </association>

    </resultMap>
    <select id="findCart" resultMap="cart_product_resultmap">
        select c.id id,c.productid productid,c.productnum productnum,p.name pname,p.detail detail,p.price price,p.image image,p.stock stock from cart c
        left join product p
        on c.productid = p.id
    </select>

</mapper>